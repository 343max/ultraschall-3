<?xml version='1.0' encoding='utf-8'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

    <?define VersionNumber="!(bind.FileVersion.ReaperExtensionDll)" ?>
 
    <!--
    Upgrade code HAS to be the same for all updates.
    Once you've chosen it don't change it.
    -->
    <?define UpgradeCode="D1D96805-203A-4323-B50A-6DE876021B35" ?>
    
    <!-- The URL for add/remove programs -->
    <?define InfoURL="http://ultraschall.fm/" ?>

    <Product Id="*" Name="!(loc.ApplicationName)" Language="!(loc.Language)" Version="$(var.VersionNumber)" Manufacturer="!(loc.ManufacturerFullName)" UpgradeCode="$(var.UpgradeCode)">
        <Package Id="*" InstallerVersion="301" Compressed="yes" Platform="x64" Description="!(loc.ProductDescription)" Comments="!(loc.Comments) $(var.VersionNumber)" />

        <WixVariable Id="WixUILicenseRtf" Value="Resources\license.rtf" />
        
        <WixVariable Id="WixUIDialogBmp" Value="Resources\background.bmp"/>
        <WixVariable Id="WixUIBannerBmp" Value="Resources\banner.bmp"/>
        
        <Icon Id="Icon.exe" SourceFile="Resources\ultraschall.ico" />
        
        <Property Id="ARPPRODUCTICON" Value="Icon.exe" />
        <Property Id="ARPNOREPAIR" Value="yes" Secure="yes" />      <!-- Remove repair -->
        
        <MajorUpgrade DowngradeErrorMessage="!(loc.NewerInstalled)" AllowSameVersionUpgrades="yes" />

        <Condition Message="!(loc.OS2Old)">
            <![CDATA[Installed OR (VersionNT >= 601)]]>
        </Condition>

        <Media Id="1" Cabinet="Ultraschall.cab" EmbedCab="yes" DiskPrompt="CD-ROM #1" />
        <Property Id="DiskPrompt" Value="Ultraschall 2.2 Installation [1]" />

        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFiles64Folder" Name="Program Files">
                <Directory Id="ReaperApplicationFolder" Name="REAPER (x64)">
                    <Directory Id="ReaperPluginFolder" Name="Plugins">
                        <Component Id="ReaperExtension" Guid="C03BAC23-1BA8-4E6D-9B5A-88E09ED2E9E2" Win64="yes">
                            <File Id="ReaperExtensionDll" Name="reaper_ultraschall.dll" DiskId="1" Source="Payload\Plugin\reaper_ultraschall.dll"/>
                        </Component>
                        <Component Id="ReaperScripts" Guid="63EF4775-EBCD-46B9-9527-741489E5EB0D" Win64="yes">
                            <File Id="UltraschallDeleteLastMarker" Name="ultraschall_delete_last_marker.lua" DiskId="1" Source="Payload\Plugin\ultraschall_delete_last_marker.lua"/>
                            <File Id="UltraschallSafeModeStartPause" Name="ultraschall_safemode_start_pause.lua" DiskId="1" Source="Payload\Plugin\ultraschall_safemode_start_pause.lua"/>
                            <File Id="UltraschallSafeModeStartStop" Name="ultraschall_safemode_start_stop.lua" DiskId="1" Source="Payload\Plugin\ultraschall_safemode_start_stop.lua"/>
                            <File Id="UltraschallSetEdit" Name="ultraschall_set_edit.lua" DiskId="1" Source="Payload\\Plugin\ultraschall_set_edit.lua"/>
                            <File Id="UltraschallSetEditPast" Name="ultraschall_set_edit_past.lua" DiskId="1" Source="Payload\Plugin\ultraschall_set_edit_past.lua"/>
                            <File Id="UltraschallSetMarker" Name="ultraschall_set_marker.lua" DiskId="1" Source="Payload\Plugin\ultraschall_set_marker.lua"/>
                            <File Id="UltraschallSetNamedMarker" Name="ultraschall_set_namedmarker.lua" DiskId="1" Source="Payload\Plugin\ultraschall_set_namedmarker.lua"/>
                            <File Id="UltraschallMuteEnvelope" Name="ultraschall_mute_envelope.lua" DiskId="1" Source="Payload\Plugin\ultraschall_mute_envelope.lua"/>
                            <File Id="UltraschallSelectStudioLink" Name="ultraschall_select_studiolink.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_studiolink.lua"/>
                            <File Id="UltraschallSelectTrack1" Name="ultraschall_select_track1.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track1.lua"/>
                            <File Id="UltraschallSelectTrack2" Name="ultraschall_select_track2.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track2.lua"/>
                            <File Id="UltraschallSelectTrack3" Name="ultraschall_select_track3.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track3.lua"/>
                            <File Id="UltraschallSelectTrack4" Name="ultraschall_select_track4.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track4.lua"/>
                            <File Id="UltraschallSelectTrack5" Name="ultraschall_select_track5.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track5.lua"/>
                            <File Id="UltraschallSelectTrack6" Name="ultraschall_select_track6.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track6.lua"/>
                            <File Id="UltraschallSelectTrack7" Name="ultraschall_select_track7.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track7.lua"/>
                            <File Id="UltraschallSelectTrack8" Name="ultraschall_select_track8.lua" DiskId="1" Source="Payload\Plugin\ultraschall_select_track8.lua"/>
                        </Component>
                        <Component Id="SWSExtension" Guid="1796BA37-8113-4CCD-A5EC-AAF52AA4B326" Win64="yes">
                            <File Id="SWSExtensionDll" Name="reaper_sws64.dll" DiskId="1" Source="3rdParty\SWS\Windows\reaper_sws64.dll"/>
                            <File Id="SWSExtensionScript" Name="sws_python.py" DiskId="1" Source="3rdParty\SWS\Windows\sws_python.py"/>
                            <File Id="SWSExtensionWhatsNew" Name="reaper_sws_whatsnew.txt" DiskId="1" Source="3rdParty\SWS\Windows\reaper_sws_whatsnew.txt"/>
                        </Component>
                    </Directory>
                </Directory>
                <Directory Id="SteinbergApplicationFolder" Name="Steinberg">
                    <Directory Id="SteinbergVstFolder" Name="VstPlugins">
                        <Component Id="StudioLinkVst" Guid="A22C272D-F6F2-4564-B9DD-BF385A80F5B3" Win64="yes">
                            <File Id="StudioLinkVstDll" Name="studio-link.dll" DiskId="1" Source="3rdParty\StudioLink\Windows\studio-link.dll"/>
                        </Component>
                    </Directory>
                </Directory>
                <Directory Id="UltraschallApplicationFolder" Name="Ultraschall">
                    <Component Id="UltraschallRelease" Guid="9F68E7D5-9D8E-45B9-9AED-3E1137F2466C" Win64="yes">
                            <File Name="README.html" DiskId="1" Source="Payload\README.html">
                                <Shortcut Id="ReadmeStartMenuShortcut" Directory="ProgramMenuDir" Name="README.html" />
                            </File>
                            <File Name="CHANGELOG.html" DiskId="1" Source="Payload\CHANGELOG.html">
                                <Shortcut Id="ChangelogStartMenuShortcut" Directory="ProgramMenuDir" Name="CHANGELOG.html"/>
                            </File>
                            <File Id="InstallHtml" Name="INSTALL.html" DiskId="1" Source="Payload\INSTALL.html"/>
                            <File Name="Ultraschall_2.2.ReaperConfigZip" DiskId="1" Source="Payload\Ultraschall_2.2.ReaperConfigZip" >
                                <Shortcut Id="ThemeDesktopShortcut" Directory="DesktopFolder" Name="Ultraschall REAPER Theme" WorkingDirectory="INSTALLDIR" Icon="Icon.exe" IconIndex="0"/>
                                <Shortcut Id="ThemeStartMenuShortcut" Directory="ProgramMenuDir" Name="Ultraschall REAPER Theme" Icon="Icon.exe" IconIndex="0"/>
                            </File>
                    </Component>
                    <Directory Id="UltraschallAddonsFolder" Name="Add-ons">
                        <Component Id="UltraschallReleaseAddons" Guid="C0213247-331D-4004-A6AA-5943351DD48A" Win64="yes">
                            <File Id="ReleasePosterPdf" Name="Rams Edition Release-Poster.pdf" DiskId="1" Source="Payload\Addons\Rams Edition Release-Poster.pdf"/>
                            <File Id="ReleasePosterPng" Name="Rams Edition Release-Poster.png" DiskId="1" Source="Payload\Addons\Rams Edition Release-Poster.png"/>
                            <File Id="ColorSet" Name="Ultraschall Colorset.SWSColor" DiskId="1" Source="Payload\Addons\Ultraschall Colorset.SWSColor"/>
                            <File Id="MicroBanner" Name="Ultraschall Microbanner 80x15.png" DiskId="1" Source="Payload\Addons\Ultraschall Microbanner 80x15.png"/>
                            <File Id="SplashScreen" Name="Ultraschall Reaper Splash Screen.png" DiskId="1" Source="Payload\Addons\Ultraschall Reaper Splash Screen.png"/>
                            <File Id="WebBanner" Name="Ultraschall Webbanner.png" DiskId="1" Source="Payload\Addons\Ultraschall Webbanner.png"/>
                        </Component>
                    </Directory>
                </Directory>
            </Directory>
 
            <Directory Id="DesktopFolder" />
            <Directory Id="ProgramMenuFolder">
                <Directory Id="ProgramMenuDir" Name="Ultraschall">
                <Component Id="StartMenuShortcuts" Guid="B7597C7E-0F99-4B16-BF1E-3EC0DAE08664">
                    <RemoveFolder Id="ProgramMenuDir" On="uninstall" />
                    <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Type="string" Value="" />
                </Component>
                </Directory>
            </Directory>

        </Directory>
        
        <DirectoryRef Id="TARGETDIR">
            <Merge Id="VCRedist" SourceFile="Payload\VCRedist\Microsoft_VC140_CRT_x64.msm" DiskId="1" Language="0"/>
            <Merge Id="SoundboardRedist" SourceFile="Payload\Soundboard\Soundboard.msm" DiskId="1" Language="1033"/>
        </DirectoryRef>
        
        <Feature Id="VCRedist" Title="Visual C++ 14.0 Runtime" AllowAdvertise="no" Display="hidden" Level="1">
            <MergeRef Id="VCRedist"/>
        </Feature>
        
        <Feature Id="SoundboardRedist" Title="Ultraschall Soundboard" AllowAdvertise="no" Display="hidden" Level="1">
            <MergeRef Id="SoundboardRedist"/>
        </Feature>
        
        <Feature Id="Complete" Level="1">
            <ComponentRef Id="ReaperExtension"/>
            <ComponentRef Id="ReaperScripts"/>
            <ComponentRef Id="SWSExtension"/>
            <ComponentRef Id="StudioLinkVst"/>
            <ComponentRef Id="UltraschallRelease"/>
            <ComponentRef Id="UltraschallReleaseAddons"/>
        </Feature>

        <UIRef Id="WixUI_Minimal" />

    </Product>
</Wix>
